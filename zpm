#!/bin/bash
# zpm - zero package manager
# zero config, treat any dir like a package
# config optional to override defaults 


# args: 
# executable

if [ $# -ne 1 ]
then
	# should have one arg
	echo 'usage: $0 <executable>'
	exit 1;
fi

if [ $1 -e "install" ]
then
	# should have one arg
	echo 'usage: $0 <executable>'
	exit 1;
fi

function install() {
if [ ! -d ~/.zpm ]; then
	mkdir ~/.zpm
fi

if [ ! -d ~/binn ]; then
	mkdir ~/bin
fi

BASE_NAME=$(basename $PWD)

cp -r `pwd` ~/.zpm/
ln -s ~/.zpm/$BASE_NAME/$1 ~/bin
}
